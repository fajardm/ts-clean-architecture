{
  "name": "ts-clean-architecture",
  "version": "1.0.0",
  "description": "Clean architecture on Typescript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc && node dist/index.js",
    "test": "tsc && jest --collect-coverage",
    "lint": "npx prettier --write .",
    "lint-check": "npx prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fajardm/ts-clean-architecture.git"
  },
  "keywords": [
    "clean",
    "architecture",
    "typescript"
  ],
  "author": "fajar.dwi.mawan@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fajardm/ts-clean-architecture/issues"
  },
  "homepage": "https://github.com/fajardm/ts-clean-architecture#readme",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/uuid": "^8.3.0",
    "jest": "^26.6.3",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.8.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "sequelize": "^6.6.2",
    "uuid": "^8.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
